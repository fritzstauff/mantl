graceTimeOut = 10
logLevel = "ERROR"
defaultEntryPoints = ["http", "https"]

[web]
address = ":8081"
CertFile = "/etc/pki/tls/certs/host.cert"
KeyFile = "/etc/pki/tls/private/host.key"

[marathon]
endpoint = "{{ traefik_marathon_endpoint }}"
domain = "{{ traefik_marathon_domain }}"
watch = true
networkInterface = "{{ ansible_default_ipv4['interface'] }}"
ExposedByDefault = {{ traefik_marathon_expose_by_default }}

[entryPoints]
  [entryPoints.http]
  address = ":80"
  [entryPoints.https]
  address = ":443"
    [entryPoints.https.tls]
      [[entryPoints.https.tls.certificates]]
      CertFile = "/etc/pki/tls/certs/host.cert"
      KeyFile = "/etc/pki/tls/private/host.key"
